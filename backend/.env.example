# 数据库配置
DATABASE_URL=sqlite:///./travel_planner.db

# JWT 密钥
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 阿里云大模型 API
ALIBABA_CLOUD_API_KEY=your-alibaba-api-key
ALIBABA_CLOUD_API_SECRET=your-alibaba-api-secret

# 科大讯飞语音识别 API
XFYUN_APP_ID=your-xfyun-app-id
XFYUN_API_SECRET=your-xfyun-api-secret
XFYUN_API_KEY=your-xfyun-api-key

# 高德地图 API
GAODE_API_KEY=your-gaode-api-key

# 开发环境配置
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 阿里云语音识别 RESTful API
# 通过 aliyuntest/acquiretoken.py 获取 Token 后设置以下变量
ALIYUN_APP_KEY=your-aliyun-appkey
ALIYUN_TOKEN=your-aliyun-token
# 可选：默认 https://nls-gateway-cn-shanghai.aliyuncs.com
ALIYUN_ASR_ENDPOINT=https://nls-gateway-cn-shanghai.aliyuncs.com
# 可选：默认 pcm / 16000
ALIYUN_ASR_FORMAT=pcm
ALIYUN_ASR_SAMPLE_RATE=16000

# 通义千问（DashScope 兼容模式）
# 用于文本解析与行程生成
DASHSCOPE_API_KEY=your-dashscope-api-key
# 可选：默认 qwen-plus
DASHSCOPE_MODEL=qwen-plus